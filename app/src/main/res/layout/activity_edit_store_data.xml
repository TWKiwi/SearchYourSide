<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49494A"
    android:orientation="vertical"
    tools:context="com.power.kiwi.searchyourside.EditStoreDataActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/StoreNameTxt"
            android:textSize="28sp"
            android:textColor="#ffffff"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:hint="@string/StoreName"
            android:id="@+id/newStoreName"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

    </TableRow>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/StoreAddress"
        android:id="@+id/newStoreAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/StoreDescription"
        android:id="@+id/newStoreDescription"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/StoreTime"
            android:textColor="#ffffff"/>


        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/OpenHours"
            android:entries="@array/HoursTime"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="28sp"
            android:text=":"
            android:textColor="#ffffff"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/OpenMinute"
            android:entries="@array/MinuteTime"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textSize="28sp"
            android:text="~"
            android:textColor="#ffffff"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/CloseHours"
            android:entries="@array/HoursTime"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="28sp"
            android:text=":"
            android:textColor="#ffffff"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/CloseMinute"
            android:entries="@array/MinuteTime"/>

        </TableRow>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/StoreRemarkNote"
        android:id="@+id/newStoreRemarkNote"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/StoreEditBtn"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:id="@+id/StoreEditBtn"
            android:background="#777777"
            android:layout_margin="5sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/EditCancelBtn"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:id="@+id/EditCancelBtn"
            android:background="#777777"
            android:layout_margin="5sp"/>


    </TableRow>
</LinearLayout>
